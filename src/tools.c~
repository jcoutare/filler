#include "filler.h"

char	**alloc_tab(char **tab, int x, int y)
{
  int i;

  i = 0;
  if (!((tab = malloc(sizeof(char *) * y + 1))))
    return (NULL);
  tab[y] = 0;
  while (tab[i])
    {
      if (!((tab[i] = malloc(sizeof(char) * x + 1))))
	return (NULL);
      tab[i][x] = '\0';
      i++;
    }
  return (tab);
}
